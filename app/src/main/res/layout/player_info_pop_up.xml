<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@drawable/popup_background"
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".NewsPopUpActivity" android:orientation="vertical">
    <LinearLayout
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <ImageView
                android:paddingTop="3dp"
                android:src="@drawable/league_schedule"
                android:layout_width="30dp"
                android:layout_height="wrap_content" android:id="@+id/player_info_icon_view"/>
        <TextView
                android:text="Doran"
                android:layout_marginLeft="5dp"
                android:theme="@style/Theme.LCK_manager.commonTextTheme"
                android:textSize="20dp"
                android:gravity="left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/player_info_name"/>
        <TextView
                android:text="[22 SPR]"
                android:layout_marginLeft="5dp"
                android:textSize="20dp"
                android:gravity="left"
                android:theme="@style/Theme.LCK_manager.commonTextTheme"
                android:layout_width="100dp"
                android:layout_height="wrap_content" android:id="@+id/team_info_win_info"/>
        <LinearLayout
                android:orientation="horizontal"
                android:gravity="right"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
            <TextView
                    android:text="55%"
                    android:textSize="20dp"
                    android:gravity="center"
                    android:theme="@style/Theme.LCK_manager.commonTextTheme"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content" android:id="@+id/team_info_rank"/>
            <ImageView
                    android:paddingTop="3dp"
                    android:src="@drawable/position_top_icon"
                    android:layout_width="30dp"
                    android:layout_height="match_parent" android:id="@+id/player_info_position_icon"/>
        </LinearLayout>
    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="200dp">

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
            android:gravity="bottom"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="40dp">
    </LinearLayout>


</LinearLayout>