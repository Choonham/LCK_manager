<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <TextView
            android:text="match 1"
            android:background="@color/calender_select_color"
            android:textColor="#FFFFFF"
            android:textSize="15sp"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="match_parent" android:id="@+id/league_schedule_match_num" android:layout_weight="0.2"/>
    <TextView
            android:text="1"
            android:textColor="@color/calender_select_color"
            android:textSize="20sp"
            android:gravity="right"
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/league_schedule_score_a" android:layout_weight="0.05"/>
    <TextView
            android:text="T1"
            android:textStyle="bold"
            android:textColor="@color/calender_select_color"
            android:textSize="20sp"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/league_schedule_team_a" android:layout_weight="0.325"/>
    <TextView
            android:text="vs"
            android:textColor="@color/calender_select_color"
            android:textSize="13sp"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="match_parent" android:layout_weight="0.05"/>
    <TextView
            android:text="Gen.G"
            android:textStyle="bold"
            android:textColor="@color/calender_select_color"
            android:textSize="20sp"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/league_schedule_team_b" android:layout_weight="0.325"/>
    <TextView
            android:text="2"
            android:textColor="@color/calender_select_color"
            android:textSize="20sp"
            android:gravity="left"
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/league_schedule_score_b" android:layout_weight="0.05"/>
</LinearLayout>