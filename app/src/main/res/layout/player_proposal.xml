<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@drawable/popup_background"
        android:padding="5dp"
        android:id="@+id/player_info_popup_parent_layout"
        android:layout_width="match_parent"
        tools:context=".NewsPopUpActivity" android:orientation="vertical" android:layout_height="350dp">
<!--    header Line-->
    <LinearLayout
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <ImageView
                android:paddingTop="3dp"
                android:src="@drawable/player_icon"
                android:layout_width="30dp"
                android:layout_height="wrap_content" android:id="@+id/player_info_icon_view"/>
        <TextView
                android:text="Doran"
                android:layout_marginLeft="5dp"
                android:theme="@style/Theme.LCK_manager.commonTextTheme"
                android:textSize="20dp"
                android:gravity="left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/player_info_name"/>
        <TextView
                android:text="[22 SPR]"
                android:layout_marginLeft="5dp"
                android:textSize="20dp"
                android:gravity="left"
                android:theme="@style/Theme.LCK_manager.commonTextTheme"
                android:layout_width="100dp"
                android:layout_height="wrap_content" android:id="@+id/player_info_season"/>
        <LinearLayout
                android:orientation="horizontal"
                android:gravity="right"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
            <TextView
                    android:text="55%"
                    android:textSize="20dp"
                    android:gravity="center"
                    android:theme="@style/Theme.LCK_manager.commonTextTheme"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content" android:id="@+id/player_info_condition"/>
            <ImageView
                    android:paddingTop="3dp"
                    android:src="@drawable/position_top_icon"
                    android:layout_width="30dp"
                    android:layout_height="match_parent" android:id="@+id/player_info_position_icon"/>
        </LinearLayout>
    </LinearLayout>
<!--    body    -->
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:id="@+id/transfer_fee_layout"
            android:layout_height="40dp">
        <TextView
                android:text="Offered Transfer fee: "
                android:textSize="17sp"
                android:theme="@style/Theme.LCK_manager.commonTextTheme"
                android:layout_width="0dp"
                android:layout_height="match_parent" android:id="@+id/transfer_fee" android:layout_weight="0.15"/>

        <EditText
                android:text="  "
                android:layout_width="0dp"
                android:inputType="number"
                android:layout_height="match_parent" android:id="@+id/transfer_fee_proposal" android:layout_weight="0.15"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:id="@+id/transfer_fee_salary_layout"
            android:layout_height="40dp">
        <TextView
                android:text="Offered salary: "
                android:textSize="17sp"
                android:theme="@style/Theme.LCK_manager.commonTextTheme"
                android:layout_width="0dp"
                android:layout_height="match_parent" android:id="@+id/transfer_fee_salary" android:layout_weight="0.15"/>

        <EditText
                android:text="  "
                android:layout_width="0dp"
                android:inputType="number"
                android:layout_height="match_parent" android:id="@+id/transfer_fee_salary_proposal" android:layout_weight="0.15"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:id="@+id/transfer_fee_total_salary_layout"
            android:layout_height="40dp">
        <TextView
                android:text="Offer salary: "
                android:textSize="17sp"
                android:theme="@style/Theme.LCK_manager.commonTextTheme"
                android:layout_width="0dp"
                android:layout_height="match_parent" android:id="@+id/transfer_fee_total_salary" android:layout_weight="0.15"/>

        <EditText
                android:text="  "
                android:layout_width="0dp"
                android:inputType="number"
                android:layout_height="match_parent" android:id="@+id/transfer_fee_total_salary_proposal" android:layout_weight="0.15"/>
    </LinearLayout>

    <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:id="@+id/transfer_fee_submit_layout"
            android:layout_height="40dp">
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="submit"/>
    </LinearLayout>
</LinearLayout>