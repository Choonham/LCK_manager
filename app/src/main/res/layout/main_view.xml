<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
>


    <LinearLayout
            android:id="@+id/news"
            android:orientation="vertical"
            android:layout_width="375dp"
            android:layout_height="220dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintVertical_bias="0.133" android:background="@drawable/news_bg_image"
            android:layout_gravity="center"
            android:layout_marginEnd="8dp">
        <TextView
                android:text="Today's News"
                android:textAlignment="center"
                android:textSize="20sp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/news_issue_border"
                android:layout_width="182dp"
                android:gravity="center"

                android:textColor="@color/icon_color"
                android:textStyle="bold"
                android:layout_height="32dp" android:id="@+id/textView6"/>
        <TextView
                android:text="@string/temp_news"
                android:textSize="15sp"
                android:textColor="@color/icon_color"
                android:layout_gravity="center"
                android:layout_margin="15dp"
                android:layout_width="352dp"
                android:layout_height="137dp" android:id="@+id/textView7"/>
    </LinearLayout>
    <TableLayout
            android:layout_width="371dp"
            android:layout_height="274dp" android:layout_marginTop="30dp"
            app:layout_constraintTop_toBottomOf="@+id/news" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="12dp" android:id="@+id/tableLayout">

        <TableRow android:background="@drawable/day_schedule_border">
            <TextView android:textAlignment="center" android:gravity="center" android:layout_height="match_parent"
                      android:layout_width="match_parent" android:layout_span="3" android:height="42dp"
                      android:text="text"/>
        </TableRow>

        <TableRow android:background="@drawable/day_schedule_border">
            <TextView android:textAlignment="center" android:gravity="center" android:layout_height="match_parent"
                      android:layout_width="129dp" android:height="42dp" android:text="text"/>
            <TextView android:textAlignment="center" android:gravity="center" android:layout_height="match_parent"
                      android:layout_width="129dp" android:height="42dp" android:text="text"/>
            <TextView android:textAlignment="center" android:gravity="center" android:layout_height="match_parent"
                      android:layout_width="129dp" android:height="42dp" android:text="text"/>
        </TableRow>

        <TableRow android:background="@drawable/day_schedule_border">
            <TextView android:textAlignment="center" android:gravity="center" android:layout_height="match_parent"
                      android:layout_width="129dp" android:height="42dp" android:text="text"/>
            <TextView android:textAlignment="center" android:gravity="center" android:layout_height="match_parent"
                      android:layout_width="129dp" android:height="42dp" android:text="text"/>
            <TextView android:textAlignment="center" android:gravity="center" android:layout_height="match_parent"
                      android:layout_width="129dp" android:height="42dp" android:text="text"/>
        </TableRow>

        <TableRow android:background="@drawable/today_match_border" android:layout_margin="3dp">
            <TextView android:textAlignment="center" android:gravity="center" android:layout_height="match_parent"
                      android:layout_width="129dp" android:height="42dp" android:text="text"/>
            <TextView android:textAlignment="center" android:gravity="center" android:layout_height="match_parent"
                      android:layout_width="129dp" android:height="42dp" android:text="text"/>
            <TextView android:textAlignment="center" android:gravity="center" android:layout_height="match_parent"
                      android:layout_width="129dp" android:height="42dp" android:text="text"/>
        </TableRow>

        <TableRow android:background="@drawable/tomo_match_border">
            <TextView android:textAlignment="center" android:gravity="center" android:layout_height="match_parent"
                      android:layout_width="129dp" android:height="42dp" android:text="text"/>
            <TextView android:textAlignment="center" android:gravity="center" android:layout_height="match_parent"
                      android:layout_width="129dp" android:height="42dp" android:text="text"/>
            <TextView android:textAlignment="center" android:gravity="center" android:layout_height="match_parent"
                      android:layout_width="129dp" android:height="42dp" android:text="text"/>
        </TableRow>

        <TableRow android:background="@drawable/day_schedule_border">
            <TextView android:textAlignment="center" android:gravity="center" android:layout_height="match_parent"
                      android:layout_width="129dp" android:height="42dp" android:text="text"/>
            <TextView android:textAlignment="center" android:gravity="center" android:layout_height="match_parent"
                      android:layout_width="129dp" android:height="42dp" android:text="text"/>
            <TextView android:textAlignment="center" android:gravity="center" android:layout_height="match_parent"
                      android:layout_width="129dp" android:height="42dp" android:text="text"/>
        </TableRow>

    </TableLayout>
    <ImageButton
            android:layout_width="219dp"
            android:layout_height="65dp" app:srcCompat="@drawable/start_match_image"
            android:id="@+id/imageButton"
            android:backgroundTint="#00FFFFFF" app:layout_constraintTop_toBottomOf="@+id/tableLayout"
            android:layout_marginTop="16dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.0"/>


</androidx.constraintlayout.widget.ConstraintLayout>