<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto">


    <LinearLayout
            android:id="@+id/news"
            android:orientation="vertical"
            android:layout_width="383dp"
            android:layout_height="264dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintVertical_bias="0.079" android:background="@drawable/news_bg_image"
            android:layout_gravity="center"
            android:layout_marginEnd="16dp" app:layout_constraintHorizontal_bias="1.0">
        <TextView
                android:text="Today's News"
                android:textAlignment="center"
                android:textSize="20sp"
                android:padding="3dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/news_issue_border"
                android:layout_width="182dp"
                android:theme="@style/Theme.LCK_manager.commonTextTheme"
                android:textStyle="bold"
                android:layout_height="32dp" android:id="@+id/today_news"/>
        <TextView
                android:text="@string/temp_news"
                android:textSize="15sp"
                android:theme="@style/Theme.LCK_manager.commonTextTheme"
                android:layout_margin="15dp"
                android:layout_width="352dp"
                android:layout_height="137dp" android:id="@+id/news_content"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="384dp"
            android:layout_height="269dp"
            app:layout_constraintTop_toBottomOf="@+id/news" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="16dp"
            app:layout_constraintHorizontal_bias="0.333" android:id="@+id/linearLayout2">

        <TextView
                android:layout_marginBottom="5dp"
                android:paddingBottom="4dp"
                android:text="2022 LCK Spring"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/match_schedule_season"
                android:theme="@style/Theme.LCK_manager.commonTextTheme"
                android:textSize="22sp"
                android:background="@drawable/tomo_match_border"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:fontFamily="@font/germania_one"/>
        <ListView
                android:id="@+id/match_schedule_list_view"
                android:layout_width="match_parent"
                android:layout_height="232dp"
                android:headerDividersEnabled="true"
                android:divider="@drawable/main_roster_divider"
        />
    </LinearLayout>
    <ImageButton
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="239dp"
            android:layout_height="66dp" app:srcCompat="@drawable/start_match_image"
            android:id="@+id/imageButton"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout2" android:layout_marginTop="16dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.174"/>


</androidx.constraintlayout.widget.ConstraintLayout>