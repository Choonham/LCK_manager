<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@drawable/popup_background"
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/release_confirm_layout">

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <ImageView
                android:src="@drawable/info_icon"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" android:id="@+id/info_icon"/>
        <TextView
                android:text="release player"
                android:layout_marginLeft="5dp"
                android:theme="@style/Theme.LCK_manager.commonTextTheme"
                android:textSize="20dp"
                android:gravity="left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/release_confirm_title"/>
    </LinearLayout>
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:orientation="vertical" android:gravity="center"
    >
        <TextView
                android:text="정말 Doran 선수를 방출하시겠습니까??\n (방출된 선수는 되돌릴 수 없습니다.)"
                android:theme="@style/Theme.LCK_manager.commonTextTheme"
                android:gravity="center_vertical"
                android:layout_margin="15dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:id="@+id/release_confirm_msg"/>

        <LinearLayout
                android:orientation="horizontal"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:gravity="center">
            <ImageButton
                    android:src="@drawable/yes_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/release_yes_btn"
                    android:layout_margin="10dp"
                    android:background="@color/none"
            />
            <ImageButton
                    android:src="@drawable/no_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/release_no_btn"
                    android:layout_margin="10dp"
                    android:background="@color/none"/>
        </LinearLayout>
    </LinearLayout>


</LinearLayout>