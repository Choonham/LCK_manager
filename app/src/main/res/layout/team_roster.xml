<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:text="Gen.G"
        android:textColor="@color/text_color"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:id="@+id/textView3"
        app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="88dp"/>

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="363dp"
            android:layout_height="265dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/textView3"
            android:id="@+id/team_main_roster"
            android:background="@drawable/main_roster_border" app:layout_constraintStart_toStartOf="parent">

        <ListView
                android:background="#9EB86F6F"
                android:id="@+id/main_roster_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:divider="@color/icon_color"
                android:dividerHeight="2dp"
                android:listSelector="@color/icon_selected_color"
        />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>