<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <TextView
            android:textColor="@color/text_color"
            android:text="1"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_width="0dp"
            android:gravity="center"
            android:layout_height="40dp" android:id="@+id/player_rank_pog_point" android:layout_weight="0.1"/>
    <ImageView
            android:padding="5dp"
            android:layout_width="0dp"
            android:layout_height="40dp" app:srcCompat="@drawable/position_top_icon"
            android:id="@+id/pog_point_position_icon" android:layout_weight="0.1"/>
    <TextView
            android:textColor="@color/text_color"
            android:text="22 SPR"
            android:layout_width="0dp"
            android:gravity="center"
            android:layout_height="40dp" android:id="@+id/player_season_pog_point" android:layout_weight="0.2"/>
    <TextView
            android:textColor="@color/text_color"
            android:text="Doran"
            android:layout_width="0dp"
            android:gravity="center"
            android:layout_height="40dp" android:id="@+id/player_name_pog_point" android:layout_weight="0.4"/>
    <TextView
            android:textColor="@color/text_color"
            android:text="400"
            android:layout_width="0dp"
            android:gravity="center"
            android:layout_height="40dp" android:id="@+id/pog_point" android:layout_weight="0.2"/>

</LinearLayout>